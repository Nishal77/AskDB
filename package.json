{
  "name": "askyourdatabase",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev:api": "pnpm --filter @askdb/api dev",
    "dev:web": "pnpm --filter @askdb/web dev",
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "build": "pnpm --recursive build",
    "lint": "pnpm --recursive lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm --recursive type-check",
    "docker:dev": "docker-compose -f infra/docker/docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f infra/docker/docker-compose.dev.yml down",
    "docker:prod": "docker-compose -f infra/docker/docker-compose.yml up --build -d",
    "docker:prod:down": "docker-compose -f infra/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f infra/docker/docker-compose.yml logs -f",
    "docker:clean": "docker-compose -f infra/docker/docker-compose.yml down -v && docker system prune -f",
    "setup:env": "./SETUP_ENV.sh",
    "migrate": "cd packages/prisma && pnpm migrate:deploy",
    "migrate:dev": "cd packages/prisma && pnpm migrate",
    "migrate:status": "cd packages/prisma && pnpm migrate:status",
    "prisma:generate": "cd packages/prisma && pnpm generate",
    "db:setup": "cd packages/prisma && pnpm generate && pnpm migrate:deploy"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  }
}

